<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/autobiography"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               >
               <ImageView
                   android:scaleType="centerCrop"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/autobiography"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:text="Autobiography"
                   android:textColor="@color/black"
                   android:background="#E680838A"
                   android:textSize="30dp"
                   android:paddingLeft="20dp"
                   android:layout_gravity="bottom"
                   />
           </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/fictional"
                >
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fictional"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Fictional"
                    android:textColor="@color/black"
                    android:background="#E680838A"
                    android:textSize="30dp"
                    android:paddingLeft="20dp"
                    android:layout_gravity="bottom"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/comic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/comic"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Comics"
                    android:textColor="@color/black"
                    android:background="#E680838A"
                    android:textSize="30dp"
                    android:paddingLeft="20dp"
                    android:layout_gravity="bottom"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/history"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="History"
                    android:textColor="@color/black"
                    android:background="#E680838A"
                    android:textSize="30dp"
                    android:paddingLeft="20dp"
                    android:layout_gravity="bottom"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>